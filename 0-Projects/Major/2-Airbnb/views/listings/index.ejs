<%- layout("/layouts/boilerplate") %>
<body>

  <h3 class="index-head">All Listings</h3>
  <div class="row row-cols-3 row-cols-md-3 row-cols-sm-1 row-cols-xs-1">
    <% for (listing of listings) { %>
    <a href="/listings/<%= listing._id %>" class="listing-link">
      <div class="card col" >
        <img
          src="<%= listing.image.url %>"
          class="card-img-top index-img"
          alt="listing_img"
          style="height: 20rem"
        />
          <div class="card-img-overlay"></div>
        <div class="card-body">
          <h5 class="card-title card-text"><%= listing.title %></h5>
          <h6 class="card-subtitle mb-2 text-body-secondary card-text">
            &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
          </h6>
          <p class="card-text">
            <%= listing.location %>, <%- listing.country %>
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>
</body>
